<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MVC.MainWindowController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <ComboBox fx:id="comboBox" layoutY="24.0" prefHeight="25.0" prefWidth="158.0" promptText="Category" />
            <MenuBar layoutY="-1.0" prefHeight="0.0" prefWidth="600.0">
              <menus>
                  <Menu mnemonicParsing="false" text="File">
                    <items>
                        <Menu mnemonicParsing="false" text="Movie">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#createMovieScene" text="New Movie" />
                              <MenuItem mnemonicParsing="false" onAction="#chooseMovieScene" text="Update Movie" />
                              <MenuItem mnemonicParsing="false" onAction="#chooseMovieSceneDEL" text="Delete Movie" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Category">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#createCategoryScene" text="Create Category" />
                              <MenuItem mnemonicParsing="false" onAction="#deleteCategory" text="Delete Category" />
                          </items>
                        </Menu>
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                        <MenuItem mnemonicParsing="false" onAction="#refreshTable" text="Refresh" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <TableView fx:id="movieTableView" layoutY="49.0" prefHeight="351.0" prefWidth="600.0">
              <columns>
                <TableColumn fx:id="movieColumn" editable="false" prefWidth="404.0" text="Title" />
                  <TableColumn fx:id="ratingColumn" editable="false" prefWidth="60.0" text="Rating" />
                  <TableColumn fx:id="ratingColumn1" editable="false" prefWidth="135.0" text="Last Time Watched" />
              </columns>
            </TableView>
            <TextField fx:id="searchTextField" layoutX="403.0" layoutY="24.0" prefHeight="25.0" prefWidth="197.0" promptText="Movie Titel, Category, Genre" />
            <Button layoutX="158.0" layoutY="24.0" mnemonicParsing="false" onAction="#movieScene" text="Play" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
